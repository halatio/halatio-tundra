# Halatio Tundra v3.0 Environment Configuration

# ======================
# REQUIRED SETTINGS
# ======================

# Runtime environment: dev, staging, or production
ENV=dev

# Google Cloud Project ID for Secret Manager
GCP_PROJECT_ID=your-gcp-project-id

# ======================
# SERVER CONFIGURATION
# ======================

# Server host and port
HOST=0.0.0.0
PORT=8080

# ======================
# PROCESSING LIMITS
# ======================

# Maximum file size in MB
MAX_FILE_SIZE_MB=500

# Maximum API response size in MB
MAX_API_RESPONSE_MB=100

# Maximum SQL response size in MB
MAX_SQL_RESPONSE_MB=100

# Maximum processing time in minutes
MAX_PROCESSING_TIME_MINUTES=10

# ======================
# PERFORMANCE SETTINGS
# ======================

# Maximum memory usage in GB
MAX_MEMORY_USAGE_GB=2

# Maximum concurrent conversions
MAX_CONCURRENT_CONVERSIONS=5

# ======================
# DATABASE POOLING
# ======================

# Database connection pool size
DB_POOL_SIZE=5

# Database maximum overflow connections
DB_MAX_OVERFLOW=10

# Database pool recycle time in seconds
DB_POOL_RECYCLE_SECONDS=3600

# ======================
# PARQUET SETTINGS
# ======================

# Parquet compression algorithm
PARQUET_COMPRESSION=snappy

# Parquet row group size
PARQUET_ROW_GROUP_SIZE=50000

# ======================
# SQL LIMITS
# ======================

# Default SQL result limit
DEFAULT_SQL_LIMIT=100000

# Maximum SQL result limit
MAX_SQL_LIMIT=1000000

# ======================
# LOGGING
# ======================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ======================
# GOOGLE CLOUD AUTHENTICATION
# ======================

# Path to Google Cloud service account JSON key file
# Set this for local development or when not using workload identity
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ======================
# SUPPORTED FILE FORMATS
# ======================

# Comma-separated list of supported file formats
# SUPPORTED_FILE_FORMATS=csv,tsv,json,geojson,excel,parquet
